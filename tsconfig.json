{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "ES2016", "ES2018"],
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
